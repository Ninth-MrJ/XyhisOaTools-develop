                      mc:Ignorable="d" Title="Xyhis.OA - 招聘管理" Height="450" Width="800" ButtonBase.Click="tclPanel_Click">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid>

            </Grid>
            <Grid Grid.Column="1">
                <StackPanel Margin="0 5 0 0">
                    <Button x:Name="btnMenu">
                        <Button.Template>
                            <ControlTemplate>
                                <Grid>
